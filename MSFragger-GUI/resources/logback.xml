<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
    <encoder>
      <pattern>%d{ISO8601} %-5level - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="com.dmtavt.fragpipe.FragpipeLoader" level="error" />
  <logger name="com.dmtavt.fragpipe.FragpipeDebug" level="info" />
  <logger name="com.dmtavt.fragpipe.api.Bus" level="error" />

  <root level="info">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
